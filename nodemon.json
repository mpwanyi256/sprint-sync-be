{
  "watch": ["src"],
  "ext": "ts,js",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "node_modules/**/*",
    "build/**/*",
    "logs/**/*"
  ],
  "exec": "ts-node -r tsconfig-paths/register -r dotenv/config src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "500"
}
