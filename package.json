{
  "name": "sprint-sync-be",
  "description": "Sprint Sync Backend",
  "version": "1.0.0",
  "main": "index.js",
  "_moduleAliases": {
    "@": "build"
  },
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "npm run clean && npm run build-ts",
    "build-ts": "tsc",
    "clean": "rimraf ./build",
    "serve": "npm run build && node -r module-alias/register -r dotenv/config build/server.js",
    "dev": "ts-node -r tsconfig-paths/register -r dotenv/config src/server.ts",
    "dev:watch": "nodemon --watch src --ext ts,js --exec \"ts-node -r tsconfig-paths/register -r dotenv/config src/server.ts\"",
    "build:watch": "tsc -w",
    "server:watch": "nodemon --watch build --exec \"npm run serve\"",
    "prod:test": "npm run build && npm run serve",
    "watch": "tsc -w",
    "check": "tsc --noEmit",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "seed:users": "node scripts/seed-users.js"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^24.3.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "mongoose": "^8.18.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^5.3.3"
  },
  "license": "ISC"
}
